<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='https://unpkg.com/98.css' />
    <link rel='icon' href='images/computer_2-4.png' />
    <title>XaropeCorp</title>
  </head>
  <style>
    body { background-color: #008080; display: flex; align-items: center;
    justify-content: center; flex-direction: column; height: 80vh; gap: 2.5rem;}
    a { text-decoration: none; color: transparent; } img { width: 50px;
    position: absolute; bottom: 10; right: 10;}
  </style>
  <body>
    <div class='window'>
      <div class='title-bar'>
        <div class='title-bar-text'>XaropeCorp©</div>
        <div class='title-bar-controls'>
          <button aria-label='Minimize'></button>
          <button aria-label='Maximize'></button>
          <button aria-label='Close'></button>
        </div>
      </div>
      <div class='window-body'>
        <menu role='tablist'>
          <li role='tab'><a href='http://localhost:3000/showAll'>Lista</a></li>
          <li role='tab' aria-selected='true'><a
              href='http://localhost:3000/'
            >Cadastro</a></li>
        </menu>
        <div class='window' role='tabpanel'>
          <div class='window-body'>
            <form action='/' method='POST'>
              <div class='field-row-stacked' style='width: 200px'>
                <label>Nome:</label>
                <input type='text' name='nome' />
              </div>
              <div class='field-row-stacked' style='width: 200px'>
                <label>Salário:</label>
                <input type='text' name='salario' />

              </div>
              <div class='field-row-stacked' style='width: 200px'>
                <label>Departamento:</label>
                <select name='departamento'>
                  <option value='selecionar' hidden>Selecionar</option>
                  <option value='administrativo'>Administrativo</option>
                  <option value='designer'>Designer</option>
                  <option value='contabil'>Contábil</option>
                  <option value='fabrica'>Fábrica</option>
                </select>
              </div>
              <div class='field-row-stacked' style='width: 200px'>
                <button
                  name='submit_button'
                  type='submit'
                  onclick='confirma()'
                >Cadastrar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <img src='/images/zelda.gif' alt='' />
  </body>

</html>